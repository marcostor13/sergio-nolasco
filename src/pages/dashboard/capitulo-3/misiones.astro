---
import DashboardLayout from '../../../layouts/DashboardLayout.astro';
import Button from '../../../components/ui/Button.astro';
---

<DashboardLayout title="Misiones Imposibles - Capítulo 3">
  <div class="max-w-3xl mx-auto">
    <div class="mb-10">
      <div class="inline-block px-3 py-1 bg-primary/10 text-primary text-xs font-bold rounded-full mb-3 tracking-wider uppercase">
        Capítulo 3
      </div>
      <h1 class="text-3xl font-black text-slate-900 mb-4">
        Las 3 Misiones Imposibles
      </h1>
      <p class="text-lg text-slate-600 leading-relaxed">
        Declara tus futuros inalcanzables. Deben ser tan grandes que te asusten y emocionen a la vez. Empieza siempre con: <strong>"Me siento feliz y agradecido ahora que..."</strong>
      </p>
    </div>

    <div class="bg-white rounded-2xl p-8 border border-slate-100 shadow-xl shadow-slate-200/50">
      <form id="missionsForm" class="space-y-8">
        
        <!-- Life Mission -->
        <div>
          <label class="label-field text-primary">Misión de Vida (Propósito Personal)</label>
          <textarea name="lifeMission" rows="3" class="input-field" placeholder="Me siento feliz y agradecido ahora que vivo en paz, viajando por el mundo..." required></textarea>
        </div>

        <!-- Impact Mission -->
        <div>
          <label class="label-field text-primary">Misión de Impacto (Contribución)</label>
          <textarea name="impactMission" rows="3" class="input-field" placeholder="Me siento feliz y agradecido ahora que he ayudado a 1 millón de personas a..." required></textarea>
        </div>

        <!-- Abundance Mission -->
        <div>
          <label class="label-field text-primary">Misión de Abundancia (Financiera)</label>
          <textarea name="abundanceMission" rows="3" class="input-field" placeholder="Me siento feliz y agradecido ahora que genero $100k mensuales de forma pasiva..." required></textarea>
        </div>

        <div class="pt-6 border-t border-slate-100">
          <Button type="submit" class="w-full">
            Declarar Futuro
          </Button>
        </div>

        <div id="message" class="hidden p-4 rounded-lg text-sm text-center"></div>
      </form>
    </div>
  </div>
</DashboardLayout>

<script>
  const form = document.getElementById('missionsForm') as HTMLFormElement;
  const messageDiv = document.getElementById('message') as HTMLDivElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const data = {
      lifeMission: formData.get('lifeMission'),
      impactMission: formData.get('impactMission'),
      abundanceMission: formData.get('abundanceMission'),
    };

    // Frontend validation prefix
    const prefix = "Me siento feliz y agradecido ahora que";
    if (!Object.values(data).every((val: string) => val.startsWith(prefix))) {
      messageDiv.textContent = `Todas las misiones deben empezar con: "${prefix}..."`;
      messageDiv.className = 'p-4 bg-yellow-50 text-yellow-600 rounded-lg text-sm text-center font-medium block mt-4';
      messageDiv.classList.remove('hidden');
      return;
    }

    try {
      const response = await fetch(`${window.API_URL}/exercises/missions`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify(data),
      });

      if (!response.ok) throw new Error('Error al guardar');

      messageDiv.textContent = '¡Futuro diseñado!';
      messageDiv.className = 'p-4 bg-green-50 text-green-600 rounded-lg text-sm text-center font-medium block mt-4';
      
      setTimeout(() => {
        window.location.href = '/dashboard/capitulo-3/tarjeta';
      }, 1500);

    } catch (error) {
      messageDiv.textContent = 'Error al guardar.';
      messageDiv.className = 'p-4 bg-red-50 text-red-600 rounded-lg text-sm text-center font-medium block mt-4';
    }
  });
</script>
