---
import DashboardLayout from '../../../layouts/DashboardLayout.astro';
import Button from '../../../components/ui/Button.astro';
---

<DashboardLayout title="Cazador de Excusas - Capítulo 2">
  <div class="max-w-4xl mx-auto">
    <div class="mb-10">
      <div class="inline-block px-3 py-1 bg-primary/10 text-primary text-xs font-bold rounded-full mb-3 tracking-wider uppercase">
        Capítulo 2
      </div>
      <h1 class="text-3xl font-black text-slate-900 mb-4">
        Cazador de Excusas
      </h1>
      <p class="text-lg text-slate-600 leading-relaxed">
        El miedo se disfraza de lógica. Identifica tus 3 frases de postergación más comunes y reescríbelas como comandos de acción.
      </p>
    </div>

    <div class="bg-white rounded-2xl p-8 border border-slate-100 shadow-xl shadow-slate-200/50">
      <form id="excusesForm" class="space-y-8">
        
        <div class="space-y-6">
          <div class="hidden md:grid grid-cols-2 gap-4 px-4">
            <span class="text-xs font-bold text-red-500 uppercase tracking-wider">La Mentira (Excusa)</span>
            <span class="text-xs font-bold text-green-600 uppercase tracking-wider">La Verdad (Acción Inmediata)</span>
          </div>

          {[1, 2, 3].map((i) => (
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 p-4 bg-slate-50 rounded-xl border border-slate-100 relative group transition-all hover:bg-white hover:shadow-md hover:border-slate-200">
              <span class="absolute left-2 top-2 text-xs font-bold text-slate-300 md:hidden">#{i}</span>
              <div>
                <label class="md:hidden block text-xs font-bold text-red-500 mb-1">La Mentira</label>
                <input type="text" name={`phrase_${i}`} class="input-field py-3 border-red-100 focus:border-red-300 focus:ring-red-100 bg-white" placeholder="Ej: No tengo tiempo..." required>
              </div>
              <div class="relative">
                <label class="md:hidden block text-xs font-bold text-green-600 mb-1">La Verdad</label>
                <div class="absolute -left-3 top-1/2 -translate-y-1/2 hidden md:block text-slate-300">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </div>
                <input type="text" name={`command_${i}`} class="input-field py-3 border-green-100 focus:border-green-300 focus:ring-green-100 bg-white" placeholder="Ej: Me levanto una hora antes." required>
              </div>
            </div>
          ))}
        </div>

        <div class="pt-6 border-t border-slate-100">
          <Button type="submit" class="w-full">
            Reprogramar Mente
          </Button>
        </div>

        <div id="message" class="hidden p-4 rounded-lg text-sm text-center"></div>
      </form>
    </div>
  </div>
</DashboardLayout>

<script>
  const form = document.getElementById('excusesForm') as HTMLFormElement;
  const messageDiv = document.getElementById('message') as HTMLDivElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const excuses = [];

    for (let i = 1; i <= 3; i++) {
      excuses.push({
        phrase: formData.get(`phrase_${i}`),
        command: formData.get(`command_${i}`),
      });
    }

    try {
      const response = await fetch(`${window.API_URL}/exercises/excuses`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({ excuses }),
      });

      if (!response.ok) throw new Error('Error al guardar');

      messageDiv.textContent = '¡Excusas eliminadas!';
      messageDiv.className = 'p-4 bg-green-50 text-green-600 rounded-lg text-sm text-center font-medium block mt-4';
      
      setTimeout(() => {
        window.location.href = '/dashboard/capitulo-2/creencias';
      }, 1500);

    } catch (error) {
      messageDiv.textContent = 'Error al guardar.';
      messageDiv.className = 'p-4 bg-red-50 text-red-600 rounded-lg text-sm text-center font-medium block mt-4';
    }
  });
</script>
