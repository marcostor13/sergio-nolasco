---
import DashboardLayout from '../../../layouts/DashboardLayout.astro';
import Button from '../../../components/ui/Button.astro';
---

<DashboardLayout title="Círculo de Influencia - Capítulo 1">
  <div class="max-w-4xl mx-auto">
    <div class="mb-10">
      <div class="inline-block px-3 py-1 bg-primary/10 text-primary text-xs font-bold rounded-full mb-3 tracking-wider uppercase">
        Capítulo 1
      </div>
      <h1 class="text-3xl font-black text-slate-900 mb-4">
        Dime con quién andas...
      </h1>
      <p class="text-lg text-slate-600 leading-relaxed">
        Eres el promedio de las 5 personas con las que más tiempo pasas. Audita tu entorno.
      </p>
    </div>

    <div class="bg-white rounded-2xl p-8 border border-slate-100 shadow-xl shadow-slate-200/50">
      <form id="influenceForm" class="space-y-8">
        
        <div class="space-y-6">
          <!-- Person 1 -->
          {[1, 2, 3, 4, 5].map((i) => (
            <div class="p-6 bg-slate-50 rounded-xl border border-slate-100">
              <h3 class="font-bold text-slate-900 mb-4 flex items-center gap-2">
                <span class="w-6 h-6 bg-slate-200 text-slate-600 rounded-full flex items-center justify-center text-xs">{i}</span>
                Persona {i}
              </h3>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <div>
                  <label class="block text-xs font-semibold text-slate-500 mb-1">Nombre</label>
                  <input type="text" name={`name_${i}`} class="input-field py-2 text-sm" placeholder="Nombre" required>
                </div>
                <div>
                  <label class="block text-xs font-semibold text-slate-500 mb-1">Ingresos Aprox.</label>
                  <input type="text" name={`income_${i}`} class="input-field py-2 text-sm" placeholder="Ej: $2000" required>
                </div>
                <div>
                  <label class="block text-xs font-semibold text-slate-500 mb-1">Tema de Conversación</label>
                  <input type="text" name={`problem_${i}`} class="input-field py-2 text-sm" placeholder="Ej: Quejas, Ideas..." required>
                </div>
                <div>
                  <label class="block text-xs font-semibold text-slate-500 mb-1">Categoría</label>
                  <select name={`category_${i}`} class="input-field py-2 text-sm" required>
                    <option value="" disabled selected>Selecciona</option>
                    <option value="creator">Creador (Suma)</option>
                    <option value="critic">Crítico (Resta)</option>
                  </select>
                </div>
              </div>
            </div>
          ))}
        </div>

        <div class="pt-6 border-t border-slate-100">
          <Button type="submit" class="w-full">
            Analizar Entorno
          </Button>
        </div>

        <div id="message" class="hidden p-4 rounded-lg text-sm text-center"></div>
      </form>
    </div>
  </div>
</DashboardLayout>

<script>
  const form = document.getElementById('influenceForm') as HTMLFormElement;
  const messageDiv = document.getElementById('message') as HTMLDivElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const people = [];

    for (let i = 1; i <= 5; i++) {
      people.push({
        name: formData.get(`name_${i}`),
        income: formData.get(`income_${i}`),
        problemType: formData.get(`problem_${i}`),
        category: formData.get(`category_${i}`),
      });
    }

    try {
      const response = await fetch(`${window.API_URL}/exercises/influence`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({ people }),
      });

      if (!response.ok) throw new Error('Error al guardar');

      messageDiv.textContent = '¡Análisis completado!';
      messageDiv.className = 'p-4 bg-green-50 text-green-600 rounded-lg text-sm text-center font-medium block mt-4';
      
      setTimeout(() => {
        window.location.href = '/dashboard';
      }, 1500);

    } catch (error) {
      messageDiv.textContent = 'Error al guardar.';
      messageDiv.className = 'p-4 bg-red-50 text-red-600 rounded-lg text-sm text-center font-medium block mt-4';
    }
  });
</script>
