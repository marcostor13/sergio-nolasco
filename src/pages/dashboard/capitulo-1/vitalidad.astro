---
import DashboardLayout from '../../../layouts/DashboardLayout.astro';
import Button from '../../../components/ui/Button.astro';
---

<DashboardLayout title="Índice de Vitalidad - Capítulo 1">
  <div class="max-w-3xl mx-auto">
    <div class="mb-10">
      <div class="inline-block px-3 py-1 bg-primary/10 text-primary text-xs font-bold rounded-full mb-3 tracking-wider uppercase">
        Capítulo 1
      </div>
      <h1 class="text-3xl font-black text-slate-900 mb-4">
        Tu Ancho de Banda Físico
      </h1>
      <p class="text-lg text-slate-600 leading-relaxed">
        Sin energía no hay ejecución. Evalúa del 1 al 10 tus pilares de vitalidad.
      </p>
    </div>

    <div class="bg-white rounded-2xl p-8 border border-slate-100 shadow-xl shadow-slate-200/50">
      <form id="vitalityForm" class="space-y-10">
        
        <!-- Rest -->
        <div>
          <div class="flex justify-between mb-4">
            <label class="font-bold text-slate-700">Calidad de Descanso</label>
            <span id="restVal" class="text-primary font-black text-xl">5</span>
          </div>
          <input type="range" name="rest" min="1" max="10" value="5" class="w-full h-2 bg-slate-200 rounded-lg appearance-none cursor-pointer accent-primary slider-input" data-target="restVal">
          <div class="flex justify-between text-xs text-slate-400 mt-2">
            <span>Me levanto cansado</span>
            <span>Energía explosiva</span>
          </div>
        </div>

        <!-- Food -->
        <div>
          <div class="flex justify-between mb-4">
            <label class="font-bold text-slate-700">Combustible (Alimentación)</label>
            <span id="foodVal" class="text-primary font-black text-xl">5</span>
          </div>
          <input type="range" name="food" min="1" max="10" value="5" class="w-full h-2 bg-slate-200 rounded-lg appearance-none cursor-pointer accent-primary slider-input" data-target="foodVal">
          <div class="flex justify-between text-xs text-slate-400 mt-2">
            <span>Comida chatarra/procesada</span>
            <span>Nutrición consciente</span>
          </div>
        </div>

        <!-- Strength -->
        <div>
          <div class="flex justify-between mb-4">
            <label class="font-bold text-slate-700">Fuerza Física</label>
            <span id="strengthVal" class="text-primary font-black text-xl">5</span>
          </div>
          <input type="range" name="strength" min="1" max="10" value="5" class="w-full h-2 bg-slate-200 rounded-lg appearance-none cursor-pointer accent-primary slider-input" data-target="strengthVal">
          <div class="flex justify-between text-xs text-slate-400 mt-2">
            <span>Sedentario total</span>
            <span>Atleta de alto rendimiento</span>
          </div>
        </div>

        <div class="pt-6 border-t border-slate-100">
          <Button type="submit" class="w-full">
            Guardar y Continuar
          </Button>
        </div>

        <div id="message" class="hidden p-4 rounded-lg text-sm text-center"></div>
      </form>
    </div>
  </div>
</DashboardLayout>

<script>
  const sliders = document.querySelectorAll('.slider-input');
  
  sliders.forEach(slider => {
    slider.addEventListener('input', (e) => {
      const targetId = (e.target as HTMLInputElement).dataset.target;
      const display = document.getElementById(targetId);
      if (display) display.textContent = (e.target as HTMLInputElement).value;
    });
  });

  const form = document.getElementById('vitalityForm') as HTMLFormElement;
  const messageDiv = document.getElementById('message') as HTMLDivElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const data = {
      rest: parseInt(formData.get('rest') as string),
      food: parseInt(formData.get('food') as string),
      strength: parseInt(formData.get('strength') as string),
    };

    try {
      const response = await fetch(`${window.API_URL}/exercises/vitality`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify(data),
      });

      if (!response.ok) throw new Error('Error al guardar');

      messageDiv.textContent = '¡Datos guardados!';
      messageDiv.className = 'p-4 bg-green-50 text-green-600 rounded-lg text-sm text-center font-medium block mt-4';
      
      setTimeout(() => {
        window.location.href = '/dashboard/capitulo-1/influencia';
      }, 1500);

    } catch (error) {
      messageDiv.textContent = 'Error al guardar.';
      messageDiv.className = 'p-4 bg-red-50 text-red-600 rounded-lg text-sm text-center font-medium block mt-4';
    }
  });
</script>
