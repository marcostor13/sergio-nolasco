---
import AuthLayout from '../layouts/AuthLayout.astro';
import Button from '../components/ui/Button.astro';
import Input from '../components/ui/Input.astro';
---

<AuthLayout title="Registro - Sergio Nolasco">
  <form id="registerForm" class="space-y-6">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-slate-900">
        Crear Cuenta
      </h2>
      <p class="text-slate-600 mt-2">Únete a la comunidad hoy mismo</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <Input
        type="text"
        name="firstName"
        id="firstName"
        label="Nombre"
        placeholder="Juan"
        required
      />

      <Input
        type="text"
        name="lastName"
        id="lastName"
        label="Apellido"
        placeholder="Pérez"
        required
      />
    </div>

    <Input
      type="email"
      name="email"
      id="email"
      label="Correo Electrónico"
      placeholder="tu@email.com"
      required
    />

    <Input
      type="password"
      name="password"
      id="password"
      label="Contraseña"
      placeholder="••••••••"
      required
    />

    <p class="text-xs text-slate-400 font-medium">
      La contraseña debe tener al menos 8 caracteres, incluyendo una mayúscula y un número.
    </p>

    <Button type="submit" variant="primary" class="w-full text-lg py-4 shadow-lg shadow-primary/20">
      Registrarse
    </Button>

    <p class="text-center text-sm text-slate-600 font-medium">
      ¿Ya tienes una cuenta?{' '}
      <a href="/login" class="text-primary font-bold hover:underline underline-offset-4">
        Inicia sesión aquí
      </a>
    </p>

    <div id="errorMessage" class="hidden p-4 bg-red-50 text-red-600 text-sm text-center rounded-lg border border-red-100"></div>
    <div id="successMessage" class="hidden p-4 bg-green-50 text-green-600 text-sm text-center rounded-lg border border-green-100"></div>
  </form>
</AuthLayout>

<script>
  const form = document.getElementById('registerForm') as HTMLFormElement;
  const errorMessage = document.getElementById('errorMessage') as HTMLDivElement;
  const successMessage = document.getElementById('successMessage') as HTMLDivElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    errorMessage.classList.add('hidden');
    successMessage.classList.add('hidden');

    const formData = new FormData(form);
    const firstName = formData.get('firstName') as string;
    const lastName = formData.get('lastName') as string;
    const email = formData.get('email') as string;
    const password = formData.get('password') as string;

    try {
      const response = await fetch(`${window.API_URL}/auth/register`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        credentials: 'include',
        body: JSON.stringify({ firstName, lastName, email, password }),
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.message || 'Error al registrarse');
      }

      successMessage.textContent =
        '¡Registro exitoso! Revisa tu correo para verificar tu cuenta.';
      successMessage.classList.remove('hidden');
      form.reset();

      setTimeout(() => {
        window.location.href = '/login';
      }, 3000);
    } catch (error) {
      errorMessage.textContent =
        error instanceof Error ? error.message : 'Error al registrarse';
      errorMessage.classList.remove('hidden');
    }
  });
</script>
