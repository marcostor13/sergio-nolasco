---
import AuthLayout from '../layouts/AuthLayout.astro';
---

<AuthLayout title="Verificar Email - Sergio Nolasco">
  <div id="verificationStatus" class="text-center py-4">
    <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary mx-auto mb-6"></div>
    <p class="text-slate-600 font-medium">Verificando tu dirección de correo...</p>
  </div>
</AuthLayout>

<script>
  const urlParams = new URLSearchParams(window.location.search);
  const token = urlParams.get('token');
  const statusDiv = document.getElementById('verificationStatus') as HTMLDivElement;

  async function verifyEmail() {
    if (!token) {
      statusDiv.innerHTML = `
        <div class="text-red-500 mb-6">
          <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-slate-900 mb-2">Enlace inválido</h3>
        <p class="text-slate-600 mb-8">El token de verificación no es válido o ha expirado.</p>
        <a href="/login" class="btn-secondary inline-block px-8">Ir al inicio de sesión</a>
      `;
      return;
    }

    try {
      const response = await fetch(`${window.API_URL}/auth/verify-email/${token}`, {
        method: 'POST',
        credentials: 'include',
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.message || 'Error al verificar el correo');
      }

      statusDiv.innerHTML = `
        <div class="text-primary mb-6">
          <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-slate-900 mb-2">¡Correo verificado!</h3>
        <p class="text-slate-600 mb-8 text-lg">Tu cuenta ha sido activada correctamente.</p>
        <a href="/login" class="btn-primary inline-block px-10 shadow-lg shadow-primary/20">Iniciar Sesión</a>
      `;
    } catch (error) {
      statusDiv.innerHTML = `
        <div class="text-red-500 mb-6">
          <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-slate-900 mb-2">Error de verificación</h3>
        <p class="text-red-500/80 mb-8">${error instanceof Error ? error.message : 'Error al verificar el correo'}</p>
        <a href="/login" class="btn-secondary inline-block px-8">Volver al inicio</a>
      `;
    }
  }

  verifyEmail();
</script>
