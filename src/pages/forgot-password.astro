---
import AuthLayout from '../layouts/AuthLayout.astro';
import Button from '../components/ui/Button.astro';
import Input from '../components/ui/Input.astro';
---

<AuthLayout title="Recuperar Contraseña - Sergio Nolasco">
  <form id="forgotPasswordForm" class="space-y-6">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-slate-900">
        ¿Olvidaste tu contraseña?
      </h2>
      <p class="text-slate-600 mt-2 italic">
        Ingresa tu correo y te enviaremos las instrucciones.
      </p>
    </div>

    <Input
      type="email"
      name="email"
      id="email"
      label="Correo Electrónico"
      placeholder="tu@email.com"
      required
    />

    <Button type="submit" variant="primary" class="w-full text-lg py-4 shadow-lg shadow-primary/20">
      Enviar Instrucciones
    </Button>

    <p class="text-center text-sm text-slate-600 font-medium">
      <a href="/login" class="text-primary font-bold hover:underline underline-offset-4 flex items-center justify-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Volver al inicio de sesión
      </a>
    </p>

    <div id="errorMessage" class="hidden p-4 bg-red-50 text-red-600 text-sm text-center rounded-lg border border-red-100"></div>
    <div id="successMessage" class="hidden p-4 bg-green-50 text-green-600 text-sm text-center rounded-lg border border-green-100"></div>
  </form>
</AuthLayout>

<script>
  const form = document.getElementById('forgotPasswordForm') as HTMLFormElement;
  const errorMessage = document.getElementById('errorMessage') as HTMLDivElement;
  const successMessage = document.getElementById('successMessage') as HTMLDivElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    errorMessage.classList.add('hidden');
    successMessage.classList.add('hidden');

    const formData = new FormData(form);
    const email = formData.get('email') as string;

    try {
      const response = await fetch(`${window.API_URL}/auth/forgot-password`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        credentials: 'include',
        body: JSON.stringify({ email }),
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.message || 'Error al enviar el correo');
      }

      successMessage.textContent =
        'Si el email existe, recibirás un correo con instrucciones para restablecer tu contraseña.';
      successMessage.classList.remove('hidden');
      form.reset();
    } catch (error) {
      errorMessage.textContent =
        error instanceof Error ? error.message : 'Error al enviar el correo';
      errorMessage.classList.remove('hidden');
    }
  });
</script>
